-- Create a table for employees
CREATE TABLE IF NOT EXISTS employees (
    id INT AUTO_INCREMENT,
    emp_id INT PRIMARY KEY,
    emp_name VARCHAR(100) NOT NULL,
    emp_email VARCHAR(100) NOT NULL,
    --emp_designation VARCHAR(100) NOT NULL,
    --emp_department VARCHAR(100) NOT NULL,
    --emp_lead VARCHAR(100) NOT NULL,
    --emp_project VARCHAR(100) NOT NULL,
    --emp_project_status VARCHAR(20) NOT NULL,   
    --emp_salary DECIMAL(10, 2),
    -- emp_project_status ENUM('allocated', 'bench') NOT NULL,
    -- emp_company_status ENUM('resigned', 'working') NOT NULL,
    -- emp_workplace_status ENUM('WFH', 'Office','Hybrid') NOT NULL,
    emp_current_location VARCHAR(100) NOT NULL,
    emp_joining_date DATE NOT NULL,
    emp_leaving_date DATE
);